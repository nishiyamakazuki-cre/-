.gnav {
	display: flex;
	flex-flow: column;
	align-items: flex-start;
	height: 2rem;
	/*	margin-left: 200px;*/
	width: 250px;
	position: fixed;
	top: 130px;
	left: 10px;
	z-index: 30;
}

.gnav>li {
	list-style: none;
	position: relative;
	/* 親要素をrelativeに */
}

.gnav li a {
	background: #001b34;
	border-right: 1px solid #eee;
	color: #fff;
	display: flex;
	/* フレックスボックスでリンク全体を囲む */
	align-items: center;
	/* 縦方向にセンター揃え */
	justify-content: space-between;
	/* テキストと▽を左右に分ける */
	height: 2rem;
	padding: 0 10px;
	/* テキストとボーダーに余白を追加 */
	text-align: left;
	text-decoration: none;
	width: 100%;
	box-sizing: border-box;
}

/* 親階層に▽を追加 */
.gnav>li>a::after {
	content: "▽";
	/* 下向き三角を表示 */
	color: #fff;
	font-size: 0.8rem;
	margin-left: 10px;
}

.gnav li ul {
	position: absolute;
	/* 子要素をabsoluteにして隣に表示 */
	top: 0;
	left: 100%;
	/* 親要素の右に表示 */
	width: 150px;
	/* サブメニューの幅 */
	height: auto;
	visibility: hidden;
	/* デフォルトは非表示 */
	opacity: 0;
	transition: visibility 0s, opacity 0.5s ease-in-out;
}

.gnav li:hover ul {
	visibility: visible;
	/* hoverで表示 */
	opacity: 1;
}

.gnav li ul li {
	height: 2rem;
}

.gnav li li a {
	border-top: 1px solid #eee;
	background: #00305c;
	/* サブメニューのリンクにも余白を追加 */
}

.gnav li li:hover a {
	background: #004789;
}


@charset "UTF-8";


.wrap2 {
	position: relative;
}

.yu-gataBack {
	position: absolute;
	top: -20px;
	left: -20px;
	z-index: 0;
}

.yu-gataBack img {
	width: 1920px;
	height: 1080px;
}

.ham {
	position: absolute;
	top: 500px;
	left: 100px;
}

.ham img {
	width: 300px;
	height: auto;
	transform: rotate(15deg);
}

.zzz {
	position: absolute;
	top: 500px;
	left: 20px;
}

.zzz img {
	width: 100px;
	height: auto;
}

.yoru {
	position: absolute;
	top: 300px;
	left: 100px;
	font-size: 50px;
	font-weight: bold;
	text-shadow: 0 0 0.05em #FFF59D, 0 0 0.06em #FFF59D, 0 0 0.07em #FFF59D,
		0 0 0.08em #FFF59D, 0 0 0.09em #FFF59D, 0 0 0.20em #FFF59D, 0 0 0.20em #FFF59D, 0 0 0.20em #FFF59D, 0 0 0.50em #FFF59D;
}

.a {
	position: absolute;
	top: 600px;
	left: 600px;
	font-size: 60px;
	line-height: 0.95em;
	font-weight: bold;
	color: #FFF;
	text-shadow:
		0 0 0.05em #F06292,
		0 0 0.10em #F06292,
		0 0 0.15em #F06292,
		0 0 0.30em #F06292;
	filter: saturate(80%);
	-webkit-background-clip: text;
	-webkit-box-reflect: below -0.25em -webkit-gradient(linear, left bottom, left top, from(rgba(255, 255, 255, .6)), to(transparent));
}

body {
	background-color: #b7282e;
	opacity: 0;
	/* 初期状態は透明 */
	transition: opacity 1.5s ease-in-out;
	/* 1.5秒でフェードイン */
}

body.fade-in {
	opacity: 1;
	/* フェードイン後の表示状態 */
}
.yu-gata-child {
	position: absolute;
	top: 200px;
	left: 1400px;
	z-index: 100;
}

.yu-gata-child img {
	width: 300px;
	height: 300px;
	border-radius: 70%/70%;
}

.Evening {
	position: absolute;
	top: 0px;
	left: 800px;
	z-index: 100;
	font-size:150px;
	font-family: 'Sacramento', cursive;
	text-shadow: 0 0 20px #fefcc9, 10px -10px 30px #feec85, -20px -20px 40px #ffae34, 20px -40px 50px #ec760c, -20px -60px 60px #cd4606, 0 -80px 70px #973716, 10px -90px 80px #451b0e;

}